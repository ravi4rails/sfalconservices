<p id="notice"><%= notice %></p>

<h1>Listing Product Bundles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_bundles.each do |product_bundle| %>
      <tr>
        <td><%= product_bundle.name %></td>
        <td><%= product_bundle.description %></td>
        <td><%= product_bundle.try(:category).try(:name) %></td>
        <td><%= link_to 'Show', admins_product_bundle_path(product_bundle) %></td>
        <td><%= link_to 'Edit', edit_product_bundle_path(product_bundle) %></td>
        <td><%= link_to 'Destroy', admins_product_bundle_path(product_bundle), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product Bundle', new_admins_product_bundle_path, class: "btn btn-primary" %>
