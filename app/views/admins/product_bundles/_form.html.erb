<div class="col-sm-12 col-lg-12 col-md-12">
  <div class="row">
    <div class="col-sm-7 col-lg-6 col-md-7">
      <%= form_for [:admins, @product_bundle] do |f| %>
        <% if @product_bundle.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@product_bundle.errors.count, "error") %> prohibited this product_bundle from being saved:</h2>

            <ul>
            <% @product_bundle.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :category_id %>
          <%= f.select :category_id, options_for_select(Category.all.collect {|p| [ p.name, p.id ] },(f.object.try(:category_id))),{include_blank: 'None'}, { :class => 'form-control'} %>
        </div>
        <div class="actions">
          <%= f.submit class: "btn btn-lg btn-primary" %>
        </div>
      <% end %>
    </div>
    <div class="col-sm-5 col-lg-6 col-md-7">
    </div>
  </div>
</div>
